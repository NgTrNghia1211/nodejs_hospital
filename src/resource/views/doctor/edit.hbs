<div class="container mt-4">
    <div class="mt-4">
        <h3>
            Chỉnh sửa hồ sơ bác sĩ
        </h3>
    </div>
    {{#each result}}
    <form class="mt-4" method="POST" action="/doctor/edit/{{this.Mabacsi}}?_method=PUT">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="fName">Họ</label>
                <input type="text" class="form-control" id="fName" value="{{this.Ho}}" name="fName">
            </div>
            <div class="form-group col-md-6">
                <label for="lName">Tên</label>
                <input type="text" class="form-control" id="lName" value="{{this.Ten}}" name="lName">
            </div>
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ</label>
            <input type="text" class="form-control" id="address" value="{{this.Diachi}}" name="address">
        </div>
        <div class="form-group">
            <label for="birthday">Ngày sinh</label>
            <input type="date" class="form-control" id="birthday" value="{{this.Ngaysinh}}" name="birthday">
        </div>
        <div class="form-group">
            <label for="sdt">Số điện thoại</label>
            <input type="text" class="form-control" id="sdt" placeholder="SDT" value="{{this.SDT}}" name="sdt">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="mabacsi">Mã bác sĩ</label>
                <input type="text" class="form-control" id="mabacsi" value="{{this.Mabacsi}}" name="mabacsi" readonly>
            </div>
            <div class="form-group col-md-4">
                <label for="Sex">Giới tính</label>
                <select id="Sex" class="form-control" name="sex">
                    <option selected>{{this.Gioitinh}}</option>
                    <option >M</option>
                    <option>F</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="Makhoa">Mã khoa</label>
                <input type="text" class="form-control" id="Makhoa" value="{{this.Makhoa}}" name="makhoa">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
    {{/each}}
</div>