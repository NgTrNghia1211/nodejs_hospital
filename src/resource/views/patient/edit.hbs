<div class="container mt-4">
    <div class="mt-4">
        <h3>
            Chỉnh sửa hồ sơ bệnh nhân
        </h3>
    </div>
    {{#each benhnhan}}
    <form class="mt-4" method="POST" action="/patient/edit/{{this.Mabenhnhan}}?_method=PUT">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="fName">Họ</label>
                <input type="text" class="form-control" id="fName" value="{{this.Ho}}" name="fName">
            </div>
            <div class="form-group col-md-6">
                <label for="lName">Tên</label>
                <input type="text" class="form-control" id="lName" value="{{this.Ten}}" name="lName">
            </div>
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ</label>
            <input type="text" class="form-control" id="address" value="{{this.Diachi}}" name="address">
        </div>
        <div class="form-group">
            <label for="birthday">Ngày sinh</label>
            <input type="date" class="form-control" id="birthday" value="{{this.Ngaysinh}}" name="birthday" required>
        </div>
        <div class="form-group">
            <label for="sdt">Số điện thoại</label>
            <input type="text" class="form-control" id="sdt" placeholder="SDT" value="{{this.SDT}}" name="sdt">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="mabenhnhan">Mã bệnh nhân</label>
                <input type="text" class="form-control" id="mabenhnhan" value="{{this.Mabenhnhan}}" name="mabenhnhan" readonly>
            </div>
            <div class="form-group col-md-4">
                <label for="Sex">Giới tính</label>
                <select id="Sex" class="form-control" name="sex">
                    <option selected>{{this.Gioitinh}}</option>
                    <option >M</option>
                    <option>F</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
    {{/each}}
</div>