<div class="container">
    <div class="mt-4">
        <form class="d-flex" method="POST" action="#" novalidate>
          <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
          <button class="btn btn-light" type="submit">Search</button>
        </form>
    </div>

    <div class="mt-4">
        <div class="row">
            <div class="col-6">
                <h3>Patients of Doctor: {{Mabacsi}}</h3>
            </div>
            <div class="col-6 d-flex flex-row-reverse">
                <a href="/doctor/new" class="btn btn-primary">New</a>
            </div>
        </div>
        <table class="table table-hover table-light">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ho</th>
                    <th scope="col">Ten</th>
                    
                    <th scope="col">Ma benh nhan</th>
                    <th scope="col">SDT</th>
                    <th scope="col">Diachi</th>
                    {{!-- <th scope="col" class="text-end">Action</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each results}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>  
                    <td><a href="/patient/{{this.Mabenhnhan}}">{{this.Ho}}</a></td>
                    <td><a href="/patient/{{this.Mabenhnhan}}">{{this.Ten}}</a></td>
                    
                    <td>{{this.Mabenhnhan}}</td>
                    <td>{{this.SDT}}</td>
                    <td>{{this.Diachi}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>