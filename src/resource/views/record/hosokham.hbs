<div class="container mt-4 justify-content-center align-items-center">
    <form method="POST" action="/record/hosokham/new">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="mabacsi">Ma bac si</label>
                <input type="text" class="form-control" id="mabacsi" name="mabacsi">
            </div>
            <div class="form-group col-md-6">
                <label for="mabenhnhan">Ma benh nhan</label>
                <input type="text" class="form-control" id="mabenhnhan" name="mabenhnhan">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="mahoso">Ma ho so</label>
                <input type="text" class="form-control" id="mahoso" name="mahoso" placeholder="latest: {{curMahoso.max}}">
            </div>
            <div class="form-group col-md-4">
                <label for="mabenh">Ma benh</label>
                <select id="mabenh" class="form-control" name="mabenh">
                    {{#each benh}}
                    <option>{{this.Mabenh}} - {{this.Tenbenh}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
